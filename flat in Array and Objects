 // Flat Array 
        function flatArr(arr) {
            let result = [];
            function self(ar) {
                for (let i = 0; i < ar.length; i++) {
                    if (Array.isArray(ar[i])) {
                        self(ar[i]) // recursion function ia calling itself again and again until work is done
                    } else {
                        result[result.length] = ar[i]
                    }
                }
            }
            self(arr);
            return result;
        }
        let num = [1, 10, [2, 3, 4], 5, 6, [8, 7], 9];
        let flat = flatArr(num)
        const find = flat.sort((a, b) => a - b);
        console.log(flatArr(find), "Array is Sorted");


//flat in Objects Flatten values without using result = [] in parameters

function flatValues(obj) { 
    let result = [];
    function helper(innerObj) {
        for (let key in innerObj) {
            if (typeof innerObj[key] === "object" && innerObj[key] !== null) {
                helper(innerObj[key]);   // recursion
            } else {
                result[result.length] = innerObj[key];
            }
        }
    }
    helper(obj);   // start recursion
    return result;
}
console.log(flatValues(a));


Full working code (Flatten keys)

function flatKeys(obj) { 
    let result = [];
    function helper(innerObj) {
        for (let key in innerObj) {
            result[result.length] = key;   // store key
            if (typeof innerObj[key] === "object" && innerObj[key] !== null) {
                helper(innerObj[key]);     // recursion
            }
        }
    }
    helper(obj);
    return result;
}
console.log(flatKeys(a));



